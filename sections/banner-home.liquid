}
.shop-cta a {
    display: inline-block;
    padding: 10px 20px;
    background: black;
    color: white;
    text-decoration: none;
    font-weight: 500;
    transition: background 0.3s;
}

.btn:hover {
    background: #333;
}

@media (max-width: 768px) {
    .hero-section {
        flex-direction: column;
        justify-content: center;
        text-align: center;
    }
    
    .hero-content {
        position: static;
        transform: none;
        max-width: 80%;
    }
}
.footer {
    background: #f5f5f5;
    text-align: center;
    padding: 10px;
    font-size: 14px;
}
</style>
