}

.hero-content {
    position: absolute;
    left: 3%;
    bottom: 8%;
    max-width: 34%;
}

.hero-content h1 {
    margin-bottom: 50px;
    margin-top: 0;
    font-family: Jost;
    font-weight: 500;
    font-size: 70px;
    line-height: 80px;
