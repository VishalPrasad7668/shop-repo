<style>
    .header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 15px 20px;
        background-color: #fff;
        position: relative;
    }
    .header .logo {
        font-size: 20px;
        font-weight: bold;
    }
    .header .choose-gift {
        background-color: #ffeb3b;
        padding: 10px 15px;
        border-radius: 5px;
        text-decoration: none;
        color: #000;
        font-weight: bold;
    }
    .header .center-text {
        position: absolute;
        left: 50%;
        transform: translateX(-50%);
        font-size: 14px;
    }

    .mobile-menu-control {
        display: flex;
        align-items: center;
        justify-content: center;
        height: 100%;
    }

    .mobile-menu-control .hamburger, .mobile-menu-control .close {
        position: absolute;
        top: 10px;
    }

    .mobile-menu-control .hamburger {
        left: 15px;
    }

    .mobile-menu-control .close {
        right: 15px;
        display: none;
    }

    .header.active .close {
        display: block;
    }

    .header.active .hamburger {
        display: none;
    }

    /* Mobile-specific styles */
    @media (max-width: 600px) {
        .header {
            flex-direction: column;
            padding-top: 50px;
        }
        .header.active .logo, .header.active .center-text, .header.active .choose-gift {
            display: block;
            text-align: center;
            width: 100%;
        }
        .header .logo, .header .center-text, .header .choose-gift {
            display: none;
        }
    }
</style>

<div class="header">
    <div class="mobile-menu-control">
        <div class="hamburger">≡</div> <!-- Hamburger Menu Icon -->
        <div class="close">✕</div> <!-- Close Icon -->
        <div class="log2">TISSO VISON</div>
    </div>
    <div class="logo">TISSO VISON</div>
    <div class="center-text">Find the ideal gift for your loved ones.</div>
    <a href="#" class="choose-gift">CHOOSE GIFT →</a>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const header = document.querySelector('.header');
        const hamburger = document.querySelector('.hamburger');
        const close = document.querySelector('.close');

        hamburger.addEventListener('click', function() {
            header.classList.add('active');
        });

        close.addEventListener('click', function() {
            header.classList.remove('active');
        });
    });
</script>
