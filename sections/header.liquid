
    <style>
        .header {
            display: flex;
            flex-direction: column;
            align-items: center;
            background-color: #fff;
            text-align: center;
            padding: 10px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        }
        .menu {
            display: none;
            flex-direction: column;
            align-items: center;
            width: 100%;
        }
        .hamburger {
            cursor: pointer;
            font-size: 30px;
        }
        .logo {
            font-size: 24px;
            font-weight: bold;
            margin: 8px 0;
        }
        .center-text {
            font-size: 16px;
            margin-bottom: 12px;
        }
        .choose-gift {
            background-color: #ffeb3b;
            padding: 12px 24px;
            border: none;
            border-radius: 5px;
            text-decoration: none;
            color: #000;
            font-weight: bold;
            cursor: pointer;
        }
        @media (min-width: 601px) {
            .hamburger {
                display: none;
            }
        }
    </style>

    <div class="header">
        <div class="hamburger">≡</div>
        <div class="menu">
            <div class="logo">TISSO VISON</div>
            <div class="center-text">Find the ideal gift for your loved ones.</div>
            <button class="choose-gift">CHOOSE GIFT →</button>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const hamburger = document.querySelector('.hamburger');
            const menu = document.querySelector('.menu');

            hamburger.addEventListener('click', function() {
                // Toggle visibility of the menu
                if (menu.style.display === 'flex') {
                    menu.style.display = 'none';
                } else {
                    menu.style.display = 'flex';
                }
            });
        });
    </script>

