
    <style>
        /* Desktop Styles */
        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 15px 20px;
            background-color: #fff;
            position: relative;
        }
        .header .logo {
            font-size: 20px;
            font-weight: bold;
            flex-grow: 1; /* Ensures the logo is centered by expanding */
            text-align: center; /* Center the text for mobile and desktop */
        }
        .header .choose-gift {
            background-color: #ffeb3b;
            padding: 10px 15px;
            border-radius: 5px;
            text-decoration: none;
            color: #000;
            font-weight: bold;
        }
        .header .center-text {
            position: absolute;
            left: 50%;
            transform: translateX(-50%);
            font-size: 14px;
        }

        /* Hide mobile menu controls in desktop */
        .mobile-menu-control {
            display: none;
        }

        /* Mobile-specific styles */
        @media (max-width: 600px) {
            .mobile-menu-control {
                display: block;
                position: absolute;
                left: 15px;
                top: 10px;
                z-index: 100;
            }
            .hamburger, .close {
                display: block; /* Always display the control icon */
                cursor: pointer;
                font-size: 24px; /* Increase the size for better mobile interaction */
            }
            .hamburger {
                display: block; /* Show hamburger by default */
            }
            .close {
                display: none; /* Hide close icon initially */
            }
            .header.active .close {
                display: block; /* Show close when menu is active */
            }
            .header.active .hamburger {
                display: none; /* Hide hamburger when menu is active */
            }
            .header .logo, .header .center-text, .header .choose-gift {
                display: none; /* Initially hide the elements when menu is not active */
            }
            .header.active .logo, .header.active .center-text, .header.active .choose-gift {
                display: block; /* Show content when menu is active */
                text-align: center;
                width: 100%;
            }
            .header {
                flex-direction: column;
                padding-top: 50px; /* Padding to accommodate the absolute position of hamburger */
            }
            .logo {
                position: static; /* Reset position for proper centering */
            }
        }
    </style>
    <div class="header">
        <div class="mobile-menu-control">
            <div class="hamburger">≡</div> <!-- Hamburger Menu Icon -->
            <div class="close">✕</div> <!-- Close Icon -->
        </div>
        <div class="logo">TISSO VISON</div>
        <div class="center-text">Find the ideal gift for your loved ones.</div>
        <a href="#" class="choose-gift">CHOOSE GIFT →</a>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const header = document.querySelector('.header');
            const hamburger = document.querySelector('.hamburger');
            const close = document.querySelector('.close');

            hamburger.addEventListener('click', function() {
                header.classList.add('active');
            });

            close.addEventListener('click', function() {
                header.classList.remove('active');
            });
        });
    </script>